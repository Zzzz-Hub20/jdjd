}):Play()
end)

-- Language Button Toggle
languageButton.MouseButton1Click:Connect(function()
languageDropdown.Visible = not languageDropdown.Visible
end)

-- Main Button Click Event
mainButton.MouseButton1Click:Connect(function()
local hideTween = TweenService:Create(mainButton, TweenInfo.new(CONFIG.TWEEN_TIME), {
BackgroundTransparency = 1,
TextTransparency = 1
})
hideTween:Play()
hideTween.Completed:Connect(function()
mainButton.Visible = false
end)

task.wait(0.1)  
fadeIn(tutorialFrame)

end)

-- Close Button Click Event
closeButton.MouseButton1Click:Connect(function()
fadeOut(tutorialFrame)

task.wait(CONFIG.TWEEN_TIME)  
  
mainButton.Visible = true  
mainButton.BackgroundTransparency = 1  
mainButton.TextTransparency = 1  
  
TweenService:Create(mainButton, TweenInfo.new(CONFIG.TWEEN_TIME), {  
    BackgroundTransparency = 0,  
    TextTransparency = 0  
}):Play()

end)

-- Initial spawn animation
mainButton.Position = UDim2.new(0.5, -140, 1, 0)
mainButton.BackgroundTransparency = 1
mainButton.TextTransparency = 1

task.wait(0.5)

TweenService:Create(mainButton, TweenInfo.new(0.6, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
Position = UDim2.new(0.5, -140, 0.88, 0),
BackgroundTransparency = 0,
TextTransparency = 0
}):Play()
