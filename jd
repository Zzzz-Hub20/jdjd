-- Create language options
for i, lang in ipairs(LANGUAGES) do
local langOption = Instance.new("TextButton")
langOption.Size = UDim2.new(1, -10, 0, 35)
langOption.BackgroundColor3 = Color3.fromRGB(45, 45, 55)
langOption.BorderSizePixel = 0
langOption.Text = lang.flag .. "  " .. lang.name
langOption.TextColor3 = Color3.fromRGB(255, 255, 255)
langOption.TextSize = 12
langOption.Font = Enum.Font.Gotham
langOption.TextXAlignment = Enum.TextXAlignment.Left
langOption.LayoutOrder = i
langOption.Parent = languageDropdown

local optionCorner = Instance.new("UICorner")  
optionCorner.CornerRadius = UDim.new(0, 6)  
optionCorner.Parent = langOption  
  
local optionPadding = Instance.new("UIPadding")  
optionPadding.PaddingLeft = UDim.new(0, 10)  
optionPadding.Parent = langOption  
  
-- Hover effect  
langOption.MouseEnter:Connect(function()  
    TweenService:Create(langOption, TweenInfo.new(0.2), {  
        BackgroundColor3 = Color3.fromRGB(60, 60, 70)  
    }):Play()  
end)  
  
langOption.MouseLeave:Connect(function()  
    TweenService:Create(langOption, TweenInfo.new(0.2), {  
        BackgroundColor3 = Color3.fromRGB(45, 45, 55)  
    }):Play()  
end)  
  
-- Click to select language  
langOption.MouseButton1Click:Connect(function()  
    currentLanguage = lang.code  
    languageButton.Text = lang.flag .. " " .. lang.code  
    languageDropdown.Visible = false  
      
    -- Here you would trigger translation logic  
    print("Language changed to: " .. lang.name)  
end)

end

