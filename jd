-- Scroll indicator hint
local scrollHint = Instance.new("TextLabel")
scrollHint.Size = UDim2.new(1, 0, 0, 20)
scrollHint.Position = UDim2.new(0, 0, 1, -25)
scrollHint.BackgroundTransparency = 1
scrollHint.Text = "â¬‡ Swipe down to read more â¬‡"
scrollHint.TextColor3 = Color3.fromRGB(150, 150, 170)
scrollHint.TextSize = 10
scrollHint.Font = Enum.Font.GothamBold
scrollHint.TextTransparency = 0.5
scrollHint.Parent = tutorialFrame

-- Hide hint when scrolled
scrollFrame:GetPropertyChangedSignal("CanvasPosition"):Connect(function()
if scrollFrame.CanvasPosition.Y > 10 then
TweenService:Create(scrollHint, TweenInfo.new(0.3), {TextTransparency = 1}):Play()
else
TweenService:Create(scrollHint, TweenInfo.new(0.3), {TextTransparency = 0.5}):Play()
end
end)

-- Smooth Tween Functions
local function fadeIn(frame)
frame.Visible = true
frame.Size = UDim2.new(0, 420, 0, 420)
frame.Position = UDim2.new(0.5, -210, 0.5, -210)
frame.BackgroundTransparency = 1

for _, child in pairs(frame:GetDescendants()) do  
    if child:IsA("GuiObject") and child ~= languageDropdown then  
        child.BackgroundTransparency = 1  
        if child:IsA("TextLabel") or child:IsA("TextButton") then  
            child.TextTransparency = 1  
        end  
    end  
end  
  
local tweenInfo = TweenInfo.new(CONFIG.TWEEN_TIME, CONFIG.TWEEN_STYLE, CONFIG.TWEEN_DIRECTION)  
  
local frameTween = TweenService:Create(frame, tweenInfo, {  
    Size = UDim2.new(0, 450, 0, 450),  
    Position = UDim2.new(0.5, -225, 0.5, -225),  
    BackgroundTransparency = 0  
})  
  
frameTween:Play()  
  
task.wait(0.1)  
  
for _, child in pairs(frame:GetDescendants()) do  
    if child:IsA("GuiObject") and child ~= languageDropdown then  
        local transparency = child.BackgroundTransparency  
        TweenService:Create(child, tweenInfo, {BackgroundTransparency = transparency == 1 and 1 or 0}):Play()  
          
        if child:IsA("TextLabel") or child:IsA("TextButton") then  
            TweenService:Create(child, tweenInfo, {TextTransparency = child == scrollHint and 0.5 or 0}):Play()  
        end  
    end  
end

end

local function fadeOut(frame)
languageDropdown.Visible = false
local tweenInfo = TweenInfo.new(CONFIG.TWEEN_TIME, CONFIG.TWEEN_STYLE, Enum.EasingDirection.In)

for _, child in pairs(frame:GetDescendants()) do  
    if child:IsA("GuiObject") and child ~= languageDropdown then  
        TweenService:Create(child, tweenInfo, {BackgroundTransparency = 1}):Play()  
          
        if child:IsA("TextLabel") or child:IsA("TextButton") then  
            TweenService:Create(child, tweenInfo, {TextTransparency = 1}):Play()  
        end  
    end  
end  
  
local frameTween = TweenService:Create(frame, tweenInfo, {  
    Size = UDim2.new(0, 420, 0, 420),  
    Position = UDim2.new(0.5, -210, 0.5, -210),  
    BackgroundTransparency = 1  
})  
  
frameTween:Play()  
frameTween.Completed:Connect(function()  
    frame.Visible = false  
    scrollFrame.CanvasPosition = Vector2.new(0, 0)  
end)

end

