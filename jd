-- Function to create text labels
local function createTextLabel(text, isBold, order)
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, -20, 0, 0)
label.BackgroundTransparency = 1
label.Text = text
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.TextSize = isBold and 13 or 11
label.Font = isBold and Enum.Font.GothamBold or Enum.Font.Gotham
label.TextWrapped = true
label.TextXAlignment = Enum.TextXAlignment.Left
label.TextYAlignment = Enum.TextYAlignment.Top
label.AutomaticSize = Enum.AutomaticSize.Y
label.LayoutOrder = order
label.Parent = scrollFrame
return label
end

local function createBullet(text, order)
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, -30, 0, 0)
label.Position = UDim2.new(0, 15, 0, 0)
label.BackgroundTransparency = 1
label.Text = "â€¢ " .. text
label.TextColor3 = Color3.fromRGB(220, 220, 230)
label.TextSize = 10
label.Font = Enum.Font.Gotham
label.TextWrapped = true
label.TextXAlignment = Enum.TextXAlignment.Left
label.TextYAlignment = Enum.TextYAlignment.Top
label.AutomaticSize = Enum.AutomaticSize.Y
label.LayoutOrder = order
label.Parent = scrollFrame
return label
end

